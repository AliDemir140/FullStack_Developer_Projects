@model List<MVC_Layout.Models.Northwind.Product>
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-2">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h1>Ürünler</h1>
            </div>
            <div class="card-body">
                <!--Ürünler burada listelenecek-->
                @foreach (var product in Model)
                {
                    <div class="col">
                        <div class="card">
                            <h5>@product.ProductName</h5>
                        </div>

                    </div>
                }

            </div>
        </div>
    </div>
</div>

