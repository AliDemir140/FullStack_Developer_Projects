@model List<MVC_NorthwindDataTransfer.Models.Northwind.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>ProductName</th>
                        <th>UnitPrice</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ProductId</td>
                            <td>@product.ProductName</td>
                            <td>@product.UnitPrice</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

