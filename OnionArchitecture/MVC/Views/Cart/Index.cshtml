@model Application.DTOs.CartDTOs.CartDTO
@{
    ViewData["Title"] = "Sepetim";
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="fas fa-shopping-cart"></i> Sepetim
    </h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-shopping-basket fa-3x mb-3"></i>
            <h4>Sepetiniz Boş</h4>
            <p>Alışverişe başlamak için ürünlerimize göz atın!</p>
            <a href="@Url.Action("Index", "Product")" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Alışverişe Başla
            </a>
        </div>
    }
    else
    {
        <div class="row">
            <!-- Sepet Ürünleri -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Sepetteki Ürünler (@Model.Items.Count)</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model.Items)
                        {
                            <div class="row mb-3 pb-3 border-bottom">
                                <div class="col-md-6">
                                    <h6>@item.ProductName</h6>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <small class="text-muted">@item.Description</small>
                                    }
                                </div>
                                <div class="col-md-2 text-center">
                                    <strong>@item.UnitPrice.ToString("C2")</strong>
                                </div>
                                <div class="col-md-2">
                                    <form asp-action="UpdateQuantity" method="post" class="d-flex align-items-center">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <input type="number"
                                               name="quantity"
                                               value="@item.Quantity"
                                               min="1"
                                               max="999"
                                               class="form-control form-control-sm"
                                               onchange="this.form.submit()" />
                                    </form>
                                </div>
                                <div class="col-md-2 d-flex align-items-center justify-content-between">
                                    <strong class="text-primary">@item.TotalPrice.ToString("C2")</strong>
                                    <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <button type="submit" class="btn btn-sm btn-danger"
                                                onclick="return confirm('Bu ürünü sepetten çıkarmak istediğinize emin misiniz?')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Alışverişe Devam Et Butonu -->
                <div class="mt-3">
                    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Alışverişe Devam Et
                    </a>
                </div>
            </div>

            <!-- Sepet Özeti -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Sepet Özeti</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Toplam Ürün:</span>
                            <strong>@Model.TotalItemCount adet</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Ara Toplam:</span>
                            <strong>@Model.TotalAmount.ToString("C2")</strong>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between mb-3">
                            <h5>Toplam:</h5>
                            <h5 class="text-primary">@Model.TotalAmount.ToString("C2")</h5>
                        </div>

                        <a href="@Url.Action("Checkout")" class="btn btn-success btn-lg w-100 mb-2">
                            <i class="fas fa-credit-card"></i> Ödemeye Geç
                        </a>

                        <form asp-action="Clear" method="post">
                            <button type="submit" class="btn btn-outline-danger w-100"
                                    onclick="return confirm('Sepeti temizlemek istediğinize emin misiniz?')">
                                <i class="fas fa-trash"></i> Sepeti Temizle
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Güvenli Alışveriş Bilgisi -->
                <div class="card mt-3">
                    <div class="card-body text-center">
                        <i class="fas fa-shield-alt fa-2x text-success mb-2"></i>
                        <p class="small mb-0">Güvenli Alışveriş</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}