<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Northwind E-Ticaret</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-store"></i> Northwind E-Ticaret
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="Index">
                                <i class="fas fa-box"></i> Ürünler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Category" asp-action="Index">
                                <i class="fas fa-list"></i> Kategoriler
                            </a>
                        </li>
                    </ul>

                    <!-- SEPET ÖZETİ - ViewComponent kullanarak -->
                    <div class="d-flex align-items-center">
                        @await Component.InvokeAsync("CartSummary")
                    </div>

                    <ul class="navbar-nav ms-3">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                            <i class="fas fa-user-circle"></i> Profilim
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Order" asp-action="MyOrders">
                                            <i class="fas fa-shopping-bag"></i> Siparişlerim
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-sign-out-alt"></i> Çıkış Yap
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Giriş Yap
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted bg-light mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-4">
                    <h5>Northwind E-Ticaret</h5>
                    <p class="small">Kaliteli ürünler, hızlı teslimat!</p>
                </div>
                <div class="col-md-4">
                    <h6>Hızlı Linkler</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="About">Hakkımızda</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">İletişim</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy">Gizlilik Politikası</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6>Sosyal Medya</h6>
                    <a href="#" class="text-decoration-none me-2"><i class="fab fa-facebook fa-2x"></i></a>
                    <a href="#" class="text-decoration-none me-2"><i class="fab fa-twitter fa-2x"></i></a>
                    <a href="#" class="text-decoration-none"><i class="fab fa-instagram fa-2x"></i></a>
                </div>
            </div>
            <hr />
            <div class="text-center">
                <small>&copy; 2025 - Northwind E-Ticaret. Tüm hakları saklıdır.</small>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom Scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Global Cart Functions -->
    <script>
        // Sayfa yüklendiğinde sepet bilgilerini güncelle
        $(document).ready(function() {
            updateCartInfo();
        });

        // Sepet bilgilerini AJAX ile getir ve güncelle
        function updateCartInfo() {
            $.ajax({
                url: '@Url.Action("GetCartInfo", "Cart")',
                type: 'GET',
                success: function(response) {
                    // Sepet badge'ini güncelle
                    const badge = $('.cart-summary .badge');
                    if (response.itemCount > 0) {
                        badge.text(response.itemCount).show();
                    } else {
                        badge.hide();
                    }
                }
            });
        }

        // Tüm AJAX sepete ekleme işlemlerinden sonra çağrılabilir
        window.refreshCart = updateCartInfo;
    </script>
</body>
</html>