@model CartItem
@{
    ViewData["Title"] = "MyCart";
    Layout = "~/Views/Shared/_Layout.cshtml";

    decimal? totalPrice = 0;
    decimal shippingCost = 0;
}

<div class="row p-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Sepetim (@Model._myCart.Count ürün)</h5>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Ürün Adı</th>
                            <th>Birim Fiyat</th>
                            <th>Adet</th>
                            <th>Ara Toplam</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model._myCart.Values)
                        {
                            totalPrice += item.Subtotal;
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.UnitPrice?.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</td>
                                <td>@item.Quantity</td>
                                <td>@item.Subtotal?.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Sipariş Özeti</h5>
            </div>
            <div class="card-body">
                @if (User.Identity.IsAuthenticated)
                {
                    <form method="post" asp-action="CompleteOrder" asp-controller="Home" id="orderForm">
                        <!-- Kargo Seçimi -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Kargo Firması Seçin:</label>
                            <div class="shipping-options">
                                <div class="form-check mb-2">
                                    <input class="form-check-input shipping-option" type="radio" name="shipperId" value="1" id="mng" data-cost="15" checked>
                                    <label class="form-check-label w-100" for="mng">
                                        <div class="d-flex justify-content-between">
                                            <span><strong>MNG Kargo</strong><br><small class="text-muted">2-3 iş günü</small></span>
                                            <span class="fw-bold">15₺</span>
                                        </div>
                                    </label>
                                </div>

                                <div class="form-check mb-2">
                                    <input class="form-check-input shipping-option" type="radio" name="shipperId" value="2" id="yurtici" data-cost="18">
                                    <label class="form-check-label w-100" for="yurtici">
                                        <div class="d-flex justify-content-between">
                                            <span><strong>Yurtiçi Kargo</strong><br><small class="text-muted">1-2 iş günü</small></span>
                                            <span class="fw-bold">18₺</span>
                                        </div>
                                    </label>
                                </div>

                                <div class="form-check mb-2">
                                    <input class="form-check-input shipping-option" type="radio" name="shipperId" value="3" id="aras" data-cost="12">
                                    <label class="form-check-label w-100" for="aras">
                                        <div class="d-flex justify-content-between">
                                            <span><strong>Aras Kargo</strong><br><small class="text-muted">3-4 iş günü</small></span>
                                            <span class="fw-bold">12₺</span>
                                        </div>
                                    </label>
                                </div>

                                @if (totalPrice >= 500)
                                {
                                    <div class="form-check mb-2">
                                        <input class="form-check-input shipping-option" type="radio" name="shipperId" value="4" id="free" data-cost="0">
                                        <label class="form-check-label w-100" for="free">
                                            <div class="d-flex justify-content-between">
                                                <span><strong>Ücretsiz Kargo</strong><br><small class="text-success">500₺ ve üzeri alışverişlerde</small></span>
                                                <span class="fw-bold text-success">Ücretsiz</span>
                                            </div>
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>

                        <hr>

                        <!-- Fiyat Özeti -->
                        <div class="price-summary">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Ürünler Toplamı:</span>
                                <span id="subtotal">@totalPrice?.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Kargo Ücreti:</span>
                                <span id="shipping-cost">15₺</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-3">
                                <h5>Genel Toplam:</h5>
                                <h5 id="total-amount">@((totalPrice ?? 0) + 15)₺</h5>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success btn-lg w-100"
                                onclick="return confirm('Siparişi tamamlamak istediğinizden emin misiniz?')">
                            <i class="bi bi-check-circle"></i> Siparişi Tamamla
                        </button>

                        @if (totalPrice < 500)
                        {
                            <div class="alert alert-info mt-3 mb-0">
                                <small>
                                    <i class="bi bi-info-circle"></i>
                                    @((500 - totalPrice)?.ToString("C", new System.Globalization.CultureInfo("tr-TR"))) daha alışveriş yaparak ücretsiz kargoya ulaşabilirsiniz!
                                </small>
                            </div>
                        }
                    </form>
                }
                else
                {
                    <div class="alert alert-warning">
                        Sipariş vermek için <a asp-action="Login" asp-controller="Home" class="alert-link">giriş yapmanız</a> gerekmektedir.
                    </div>
                    <a asp-action="Login" asp-controller="Home" class="btn btn-primary btn-lg w-100">
                        <i class="bi bi-person"></i> Giriş Yap
                    </a>
                }
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const shippingOptions = document.querySelectorAll('.shipping-option');
        const shippingCostElement = document.getElementById('shipping-cost');
        const totalAmountElement = document.getElementById('total-amount');
        const subtotal = @(totalPrice ?? 0);

        // Ücretsiz kargo seçeneği varsa onu seç
        const freeShipping = document.getElementById('free');
        if (freeShipping) {
            freeShipping.checked = true;
            updateTotal(0);
        } else {
            updateTotal(15); // Varsayılan MNG kargo
        }

        shippingOptions.forEach(option => {
            option.addEventListener('change', function() {
                const cost = parseFloat(this.dataset.cost);
                updateTotal(cost);
            });
        });

        function updateTotal(shippingCost) {
            if (shippingCost === 0) {
                shippingCostElement.textContent = 'Ücretsiz';
            } else {
                shippingCostElement.textContent = shippingCost + '₺';
            }

            const total = subtotal + shippingCost;
            totalAmountElement.textContent = total.toLocaleString('tr-TR', {
                style: 'currency',
                currency: 'TRY'
            });
        }
    });
</script>

<style>
    .shipping-options .form-check {
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
        padding: 1rem;
        transition: all 0.2s;
    }

        .shipping-options .form-check:hover {
            border-color: #0d6efd;
            background-color: #f8f9fa;
        }

    .shipping-options .form-check-input:checked ~ .form-check-label {
        border-color: #0d6efd;
    }

    .shipping-options .form-check-input:checked {
        border-color: #0d6efd;
        background-color: #0d6efd;
    }
</style>