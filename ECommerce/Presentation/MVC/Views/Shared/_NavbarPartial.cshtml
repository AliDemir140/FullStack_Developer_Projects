@inject BLL.Services.Abstracts.ICategoryServiceManager categoryService;
@{
    var sepet = MVC.Utils.SessionHelper.GetProductFromJson<MVC.Models.CartModel.CartItem>(Context.Session, "sepet_session");
}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container px-4 px-lg-5">
        <a class="navbar-brand" href="#!">Start Bootstrap</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                <li class="nav-item"><a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                <li class="nav-item"><a class="nav-link" href="#!">Hakkımızda</a></li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Kategoriler</a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        @foreach (var category in categoryService.GetActives())
                        {
                            <li><a class="dropdown-item" asp-action="GetProductWithCategory" asp-controller="Home" asp-route-id="@category.ID">@category.CategoryName</a></li>
                        }
                    </ul>
                </li>
            </ul>

            <div class="d-flex align-items-center">
                @if (User.Identity.IsAuthenticated)
                {
                    <!-- Giriş yapmış kullanıcı için -->
                    <div class="dropdown me-3">
                        <button class="btn btn-outline-primary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle"></i> @User.Identity.Name
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="#"><i class="bi bi-person"></i> Profilim</a></li>
                            <li><a class="dropdown-item" asp-action="MyOrders" asp-controller="Home"><i class="bi bi-bag"></i> Siparişlerim</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-controller="Home" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="dropdown-item">
                                        <i class="bi bi-box-arrow-right"></i> Çıkış Yap
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <!-- Giriş yapmamış kullanıcı için -->
                    <a asp-action="Login" asp-controller="Home" class="btn btn-outline-primary me-2">
                        <i class="bi bi-box-arrow-in-right"></i> Giriş
                    </a>
                    <a asp-action="Register" asp-controller="Home" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-person-plus"></i> Kayıt Ol
                    </a>
                }

                <!-- Sepet -->
                <a asp-action="MyCart" asp-controller="Home" class="btn btn-outline-dark">
                    <i class="bi-cart-fill me-1"></i>
                    Sepet
                    @if (sepet == null)
                    {
                        <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                    }
                    else
                    {
                        <span class="badge bg-dark text-white ms-1 rounded-pill">@sepet._myCart.Count</span>
                    }
                </a>
            </div>
        </div>
    </div>
</nav>