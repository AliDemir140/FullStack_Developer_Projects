@model Product
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create Category</h1>

<div class="card">
    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <label asp-for="ProductName"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input type="number" asp-for="Price" class="form-control"></>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock"></label>
                <input asp-for="Stock" type="number" class="form-control"></>
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <!--Kategori Seçim-->
            <div class="form-group">
                <label>Kategoriler</label>

               
                <select asp-items="@ViewBag.Categories" class="form-control" asp-for="CategoryId">
                    <option selected disabled>Kategori Seç</option>
                </select>


               
            </div>

            <!--Durum Seçim-->

            <div class="form-group">
                <label asp-for="Status"></label>
                <select asp-for="Status" class="form-control">
                    <option value="@DAL.Entities.Enums.DataStatus.Active">Active</option>
                    <option value="@DAL.Entities.Enums.DataStatus.Inactive">Inactive</option>
                    <option value="@DAL.Entities.Enums.DataStatus.None">None</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
