@model List<MVC.Areas.Admin.Models.UserViewModels.RoleViewModel>

@{
    ViewData["Title"] = "Rol Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="bi bi-shield"></i> Rol Yönetimi
        </h1>
        <div>
            <a asp-action="CreateRole" class="btn btn-success me-2">
                <i class="bi bi-plus-circle"></i> Yeni Rol Oluştur
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-people"></i> Kullanıcı Listesi
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="bi bi-list"></i> Sistem Rolleri
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead class="table-light">
                        <tr>
                            <th>Rol Adı</th>
                            <th>Kullanıcı Sayısı</th>
                            <th>Durum</th>
                            <th class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@role.RoleName</strong>
                                    @if (string.Equals(role.RoleName, "admin", System.StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge bg-danger ms-2">Sistem Yöneticisi</span>
                                    }
                                    else if (string.Equals(role.RoleName, "customer", System.StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge bg-primary ms-2">Varsayılan</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info text-dark">@role.UserCount Kullanıcı</span>
                                </td>
                                <td>
                                    <span class="badge bg-success">Aktif</span>
                                </td>
                                <td class="text-center">
                                    @if (!string.Equals(role.RoleName, "admin", System.StringComparison.OrdinalIgnoreCase))
                                    {
                                        <form asp-action="DeleteRole" method="post" style="display:inline;"
                                              onsubmit="return confirm('Bu rolü silmek istediğinizden emin misiniz?');">
                                            <input type="hidden" name="roleId" value="@role.RoleId" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                <i class="bi bi-trash"></i> Sil
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="btn btn-outline-secondary btn-sm" disabled>
                                            <i class="bi bi-lock"></i> Korumalı
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="alert alert-info">
        <h5><i class="bi bi-info-circle"></i> Rol Bilgileri</h5>
        <ul class="mb-0">
            <li><strong>Admin:</strong> Tüm sistem yetkilerine sahiptir, yönetim paneline erişebilir.</li>
            <li><strong>Customer:</strong> Normal kullanıcı yetkilerine sahiptir, sadece müşteri arayüzüne erişebilir.</li>
            <li>Yeni roller ekleyerek farklı yetki grupları oluşturabilirsiniz.</li>
        </ul>
    </div>
</div>
