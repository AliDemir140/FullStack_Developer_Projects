@model List<MVC.Areas.Admin.Models.UserViewModels.UserListViewModel>


@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Başlık ve İstatistikler -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="bi bi-people"></i> Kullanıcı Yönetimi
        </h1>
        <div>
            <a asp-action="CreateRole" class="btn btn-info me-2">
                <i class="bi bi-shield-plus"></i> Yeni Rol Oluştur
            </a>
            <a asp-action="RoleList" class="btn btn-secondary">
                <i class="bi bi-shield"></i> Rolleri Yönet
            </a>
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Toplam Kullanıcı
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalUsers</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-people fs-2 text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Onaylı Kullanıcılar
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ConfirmedUsers</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-check-circle fs-2 text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Admin Sayısı
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.AdminCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-shield fs-2 text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Aktif Oturum
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @User.Identity.Name
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-person-circle fs-2 text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Başarı ve Hata Mesajları -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Kullanıcı Listesi -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="bi bi-list"></i> Tüm Kullanıcılar
            </h6>
            <input type="text" id="searchInput" class="form-control w-25" placeholder="Kullanıcı ara...">
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="userTable" width="100%" cellspacing="0">
                    <thead class="table-light">
                        <tr>
                            <th>Kullanıcı Adı</th>
                            <th>Email</th>
                            <th>Email Onayı</th>
                            <th>Roller</th>
                            <th class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@user.UserName</strong>
                                </td>
                                <td>@user.Email</td>
                                <td class="text-center">
                                    @if (user.EmailConfirmed)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Onaylı
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-clock"></i> Bekliyor
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (user.Roles.Any())
                                    {
                                        @foreach (var role in user.Roles)
                                        {
                                            @if (role.ToLower() == "admin")
                                            {
                                                <span class="badge bg-danger me-1">@role</span>
                                            }
                                            else if (role.ToLower() == "customer")
                                            {
                                                <span class="badge bg-primary me-1">@role</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary me-1">@role</span>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Rol atanmamış</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="UserDetails" asp-route-userId="@user.UserId"
                                           class="btn btn-outline-info" title="Detaylar">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="ManageRoles" asp-route-userId="@user.UserId"
                                           class="btn btn-outline-primary" title="Rolleri Yönet">
                                            <i class="bi bi-shield"></i>
                                        </a>

                                        @if (!user.EmailConfirmed)
                                        {
                                            <form asp-action="ConfirmEmail" method="post" style="display:inline;">
                                                <input type="hidden" name="userId" value="@user.UserId" />
                                                <button type="submit" class="btn btn-outline-success btn-sm"
                                                        title="Email Onayla">
                                                    <i class="bi bi-check-circle"></i>
                                                </button>
                                            </form>
                                        }

                                        <form asp-action="ToggleLockout" method="post" style="display:inline;">
                                            <input type="hidden" name="userId" value="@user.UserId" />
                                            <button type="submit" class="btn btn-outline-warning btn-sm"
                                                    title="Kilitle/Kilit Aç">
                                                <i class="bi bi-lock"></i>
                                            </button>
                                        </form>

                                        <form asp-action="DeleteUser" method="post" style="display:inline;"
                                              onsubmit="return confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz?');">
                                            <input type="hidden" name="userId" value="@user.UserId" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm"
                                                    title="Sil">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Tablo arama fonksiyonu
        $(document).ready(function() {
            $("#searchInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#userTable tbody tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}