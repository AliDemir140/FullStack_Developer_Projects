@model IEnumerable<DAL.Entities.Concretes.Supplier>
@{
    ViewData["Title"] = "Supplier";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container">
    <div class="row">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <h2 class="card-title">@ViewData["Title"]</h2>
                <a asp-action="Create" asp-controller="Supplier" class="btn btn-success ms-auto">Yeni @ViewData["Title"]</a>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Şirket Adı</th>
                            <th>İletişim Kişisi</th>
                            <th>Ünvan</th>
                            <th>Telefon</th>
                            <th>Şehir</th>
                            <th>Durum</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var supplier in Model)
                        {
                            <tr>
                                <td>@supplier.ID</td>
                                <td>@supplier.CompanyName</td>
                                <td>@supplier.ContactName</td>
                                <td>@supplier.ContactTitle</td>
                                <td>@supplier.Phone</td>
                                <td>@supplier.City</td>
                                <td>
                                    @if (supplier.Status == DAL.Entities.Enums.DataStatus.Active)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else if (supplier.Status == DAL.Entities.Enums.DataStatus.Inactive)
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@supplier.Status</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Update" asp-controller="Supplier" asp-route-id="@supplier.ID" class="btn btn-warning">Güncelle</a>
                                    <a asp-action="Delete" asp-controller="Supplier" asp-route-id="@supplier.ID" class="btn btn-danger">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>