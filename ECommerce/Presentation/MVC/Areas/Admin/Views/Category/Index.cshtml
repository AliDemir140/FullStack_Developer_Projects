@model IEnumerable<DAL.Entities.Concretes.Category>  
@{
    ViewData["Title"] = "Kategori";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="card">
            <div class="card-header d-flex justify-content-between">

                <h2> @ViewData["Title"]</h2>
                <a asp-action="Create" asp-controller="Category" class="btn btn-success ms-auto">Yeni @ViewData["Title"]</a>

             
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Kategori ad</th>
                            <th>Açıklama</th>
                            <th>Durum</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.ID</td>
                                <td>@category.CategoryName</td>
                                <td>@category.Description</td>
                                <td>
                                    @if (category.Status == DAL.Entities.Enums.DataStatus.Active)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else if (category.Status == DAL.Entities.Enums.DataStatus.Inactive)
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@category.Status</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Update" asp-controller="Category" asp-route-id="@category.ID"  class="btn btn-warning">güncelle</a>
                                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@category.ID" class="btn btn-danger">sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
