@model List<Order>

@{
    ViewData["Title"] = "Sipariş Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Sipariş Yönetimi</h1>
    <div>
        <span class="text-muted">Toplam @Model.Count sipariş</span>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Tüm Siparişler</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th>Sipariş No</th>
                        <th>Müşteri ID</th>
                        <th>Sipariş Tarihi</th>
                        <th>Durum</th>
                        <th>Kargo Firması</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td class="fw-bold">#@order.ID</td>
                            <td>@order.UserId.Substring(0, 8)...</td>
                            <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                @if (order.ShipperId == null)
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-clock"></i> Hazırlanıyor
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-truck"></i> Kargoya Verildi
                                    </span>
                                }
                            </td>
                            <td>
                                @if (order.Shipper == null)
                                {
                                    <span class="text-muted">-</span>
                                }
                                else
                                {
                                    <strong>@order.Shipper.ShipperName</strong>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@order.ID"
                                       class="btn btn-info btn-sm" title="Detayları Görüntüle">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (order.ShipperId == null)
                                    {
                                        <a asp-action="UpdateShipper" asp-route-id="@order.ID"
                                           class="btn btn-warning btn-sm" title="Kargoya Ver">
                                            <i class="fas fa-truck"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-action="UpdateShipper" asp-route-id="@order.ID"
                                           class="btn btn-secondary btn-sm" title="Kargo Güncelle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle fa-2x mb-3"></i>
        <h4>Henüz sipariş bulunmamaktadır.</h4>
        <p class="mb-0">Müşteriler sipariş verdiğinde burada görünecektir.</p>
    </div>
}